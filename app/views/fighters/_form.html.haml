%section.section.pt-0
  .row
    .col-lg-12
      .card.pt-4
        .card-body
          = form_for @fighter do |f|
            .mb-3
              = f.label :avatar, class: "form-label"
              = f.file_field :avatar, class: "form-control"
            .mb-3
              = f.label :name, class: "form-label"
              = f.text_field :name, class: "form-control", required: :true
            .mb-3
              = f.label :life_points, class: "form-label"
              = f.number_field :life_points, class: "form-control", required: :true
            .mb-3
              = f.label :attack_points, class: "form-label"
              = f.number_field :attack_points, class: "form-control", required: :true, min: 1
            .mb-3
              = f.label :experience_points, class: "form-label"
              = f.number_field :experience_points, class: "form-control", required: :true
            .mb-3
              = f.submit "sauvegarder", class: "btn btn-primary"
