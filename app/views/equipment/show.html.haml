= render '/partials/navbar'
%main#main.main
  .overlay
  .pagetitle
    %h1 Afficher equipement
    %nav
      %ol.breadcrumb
        %li.breadcrumb-item
          %a{href: "/fights/new"} Arena
        %li.breadcrumb-item
          %a{href: "/equipment"} Equipements
        %li.breadcrumb-item.active Equipement
  %section.section.pt-0
    .row
      .col-lg-12
        .card.pt-4
          .card-body
            .col-xl-3.col-lg-4.col-md-6.col-sm-12.col-xs-12
              .card.border-gray-300
                .card-header.bg-primary.bg-gradient.text-white.border-dark-subtle
                  .d-flex.justify-content-between.align-baseline.fs-5
                    %span.align-baseline.fs-5
                      = @equipment.name
                    = link_to edit_equipment_path(@equipment), title: "Modifier", class:"pull-right" do
                      %i.fa-solid.fa-pen-to-square{"aria-hidden" => "true", style: "color: white;"}
                .card-body.text-white.fs-6.p-3
                  %ul.list-group.list-group-flush.price-list
                    %li.list-group-item.border-secondary-subtle
                      %p
                        %span.fw-semibold
                          Nom:
                        = @equipment.name
                    %li.list-group-item.border-secondary-subtle
                      %span.fw-semibold
                        Attaque:
                      = @equipment.attack_points
                    %li.list-group-item.border-secondary-subtle
                      %span.fw-semibold
                        DÃ©fense:
                      = @equipment.defense_points
                    %li.list-group-item.border-secondary-subtle
                      %span.fw-semibold
                        Type:
                      = @equipment.type
